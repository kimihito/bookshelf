<h2>Add book</h2>

<% unless params.valid? %>
  <h3>There was a problem with your submission</h3>
  <ul>
    <% params.error_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%=
  form_for :book, routes.books_path do
    div class: 'input' do
      label :title
      text_field :title
    end

    div class: 'input' do
      label :url
      text_field :url
    end

    div class: 'input' do
      label :status
      select :status, Book::VALID_STATUSES
    end

    div class: 'controls' do
      submit 'Create Book'
    end
  end
%>